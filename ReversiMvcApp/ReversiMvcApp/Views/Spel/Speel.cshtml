@model ReversiMvcApp.Models.Spel
@using System.Security.Claims

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";

    ClaimsPrincipal currentUser = this.User;
    var currentUserId = currentUser.FindFirst(ClaimTypes.NameIdentifier)?.Value;
}


@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.js"></script>
    <script src="https://unpkg.com/regenerator-runtime@0.13.1/runtime.js"></script>
    <link rel="stylesheet" href="~/css/style.min.css">
    <script src="~/js/vendor.js"></script>
    <script src="~/js/templates.js"></script>
    <script src="~/js/app.js"></script>
    <script>
        $(function () {
            Game.init('@Model.Token', '@currentUserId', 'http://localhost:5000');
        });

    </script>
}
<div style="width: 516px; margin: auto;">
    <button class="btn btn-info" id="leaveButton">Spel Verlaten ⚠</button>
    <div class="score--container">
        <h1>@Model.Omschrijving</h1>
        <h1 id="score">0 - 0</h1>
    </div>

    <div class="apiData"></div>
    <h4 id="beurt" style="border-radius: 20px; text-align: center; width: 516px; opacity: 0.8"></h4>
    <div class="board"></div>
    <div style="height: 516px; width: 516px; margin-top: 20px">
        <canvas id="stats"></canvas>
    </div>
</div>